<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_coupon_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="CODE" />

        <TextView
            android:id="@+id/text_coupon_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount: %" />

        <TextView
            android:id="@+id/text_coupon_expiration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires: dd/mm/yyyy" />

        <TextView
            android:id="@+id/text_coupon_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining uses: 0"
            android:textStyle="italic"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/text_coupon_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: active"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_edit_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>