<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- C칩digo del cup칩n -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Coupon Code">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_coupon_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Descuento -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discount (%)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_coupon_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fecha de vencimiento -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expiration (timestamp)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_coupon_expiration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- M치ximo de usos -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Max Uses">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_coupon_max_uses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Productos aplicables -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product IDs (comma separated)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_coupon_product_ids"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Bot칩n Guardar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Coupon"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>