<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.orders.OrderDetailsFragment">

    <TextView
        android:id="@+id/tvOrderDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles del Pedido"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarOrderDetails"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvOrderDetailsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/orderDetailsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"> <!-- CAMBIO: Inicia como gone, se mostrará cuando los datos estén listos -->

            <TextView
                android:id="@+id/tvLabelOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Pedido:"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>
            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="XYZ123ABC"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

            <TextView
                android:id="@+id/tvLabelOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>
            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="28 Oct 2023, 11:00 AM"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

            <TextView
                android:id="@+id/tvLabelSellerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Vendedor:"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>
            <TextView
                android:id="@+id/tvSellerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Seller789"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

            <TextView
                android:id="@+id/tvLabelUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Usuario:"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>
            <TextView
                android:id="@+id/tvUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="User456"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>


            <TextView
                android:id="@+id/tvLabelProductId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Producto Pedido:"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvProductIds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ProdXYZ123"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>


            <TextView
                android:id="@+id/tvLabelProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Producto:"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:visibility="gone" /> <!-- Inicia oculto -->
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Manzanas Frescas"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:visibility="gone" /> <!-- Inicia oculto -->

            <TextView
                android:id="@+id/tvLabelProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio Producto:"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:visibility="gone" /> <!-- Inicia oculto -->
            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$2.99"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:visibility="gone" /> <!-- Inicia oculto -->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>