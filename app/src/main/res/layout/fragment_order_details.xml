<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    tools:context=".ui.orders.OrderDetailsFragment">

    <TextView
        android:id="@+id/tvOrderDetailsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/order_details_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        android:textColor="@color/leaf_green"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBarOrderDetails"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/leaf_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOrderDetailsTitle"
        android:layout_marginTop="32dp"/>

    <ScrollView
        android:id="@+id/scrollViewDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvOrderDetailsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/orderDetailsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvLabelOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_id"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/text_secondary_on_background"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="XYZ123ABC-VERY-LONG-ID-EXAMPLE"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/leaf_green"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvLabelOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_date"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/text_secondary_on_background"/>
            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="28 Octubre 2023, 11:00 AM"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/text_primary_on_background"
                android:layout_marginBottom="24dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/subtle_divider"
                android:layout_marginVertical="16dp"/>

            <!-- INICIO DE SECCIÓN DE ESTADO MODIFICADA -->
            <TextView
                android:id="@+id/tvLabelOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_status_label"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/text_secondary_on_background"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvOrderStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Delivered"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold"
                    android:textColor="@color/leaf_green"
                    />

                <Button
                    android:id="@+id/btnChangeStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/change_status_button"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_button"
                    android:paddingHorizontal="16dp"
                    />
            </LinearLayout>
            <!-- FIN DE SECCIÓN DE ESTADO MODIFICADA -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/subtle_divider"
                android:layout_marginVertical="16dp"/>


            <TextView
                android:id="@+id/tvLabelSellerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sold_by"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/text_secondary_on_background"/>
            <TextView
                android:id="@+id/tvSellerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tienda PureHarvest (ID: Seller789)"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/text_primary_on_background"
                android:layout_marginBottom="24dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/subtle_divider"
                android:layout_marginVertical="16dp"/>

            <TextView
                android:id="@+id/tvLabelUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/text_secondary_on_background"/>
            <TextView
                android:id="@+id/tvUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Ana Gómez (ID: User456)"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/text_primary_on_background"
                android:layout_marginBottom="24dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/subtle_divider"
                android:layout_marginVertical="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_included"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="@color/leaf_green"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvLabelProductId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_id"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/text_secondary_on_background"/>
            <TextView
                android:id="@+id/tvProductIds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="PROD-FRUIT-APPLE-001"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/text_primary_on_background"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvLabelProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_name"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/text_secondary_on_background"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Manzana Fuji Premium"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/text_primary_on_background"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvLabelProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_price"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/text_secondary_on_background"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="₡1,850.00"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textStyle="bold"
                android:textColor="@color/leaf_green"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>