<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.company_buyers.CompanyBuyerDetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarBuyerDetails"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/title_buyer_details" />


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/buyerDetailsContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <!-- Buyer ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_id"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvBuyerDetailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                tools:text="USER123XYZ"/>

            <!-- Buyer Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/label_name"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvBuyerDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                tools:text="Nombre Completo del Comprador"/>

            <!-- Items Bought -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/label_items_bought"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvBuyerDetailItemsBought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                tools:text="10"/>

            <!-- Buyer Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/label_email"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvBuyerDetailEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                tools:text="comprador@example.com"/>

            <!-- Buyer Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/label_phone"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvBuyerDetailPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                tools:text="+1 555 123 4567"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonContactBuyerDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_contact_buyer"
            android:layout_marginTop="24dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBarBuyerDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewBuyerDetailsError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="@string/error_loading_buyer_details"
    android:textAppearance="?attr/textAppearanceSubtitle1"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>