<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.company_buyers.CompanyBuyerDetailsFragment">

    <ProgressBar
        android:id="@+id/progressBarBuyerDetails"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/detailsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewDetailIdLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer ID:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewDetailId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textViewDetailIdLabel"
                app:layout_constraintTop_toTopOf="@+id/textViewDetailIdLabel"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="USER123" />

            <TextView
                android:id="@+id/textViewDetailNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Name:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDetailIdLabel" />

            <TextView
                android:id="@+id/textViewDetailName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textViewDetailNameLabel"
                app:layout_constraintTop_toTopOf="@+id/textViewDetailNameLabel"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="John Doe" />

            <TextView
                android:id="@+id/textViewDetailItemsBoughtLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Items Bought:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDetailNameLabel" />

            <TextView
                android:id="@+id/textViewDetailItemsBought"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textViewDetailItemsBoughtLabel"
                app:layout_constraintTop_toTopOf="@+id/textViewDetailItemsBoughtLabel"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="25" />

            <TextView
                android:id="@+id/textViewDetailEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Email:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDetailItemsBoughtLabel" />

            <TextView
                android:id="@+id/textViewDetailEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textViewDetailEmailLabel"
                app:layout_constraintTop_toTopOf="@+id/textViewDetailEmailLabel"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="john.doe@example.com" />

            <TextView
                android:id="@+id/textViewDetailPhoneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Phone:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDetailEmailLabel" />

            <TextView
                android:id="@+id/textViewDetailPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textViewDetailPhoneLabel"
                app:layout_constraintTop_toTopOf="@+id/textViewDetailPhoneLabel"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="+1234567890" />

            <TextView
                android:id="@+id/textViewNoDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer details not found."
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>