<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.company_products.ProductsOptionsFragment">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButtonOptions"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back_24"
        android:background="?attr/selectableItemBackgroundBorderless"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp" />
    <!-- Optional: android:tint="@color/your_icon_color" -->

    <!-- Title -->
    <TextView
        android:id="@+id/textViewOptionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Gestionar Productos"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintBottom_toTopOf="@+id/cProductsBtn"
        app:layout_constraintStart_toStartOf="@+id/cProductsBtn"
        app:layout_constraintEnd_toEndOf="@+id/cProductsBtn" />

    <!-- Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/cProductsBtn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:text="Ver mis Productos"
        android:paddingVertical="12dp"
        android:backgroundTint="@color/leaf_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/addProductBtn"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.5" />
    <!-- Adjusted bias slightly for centering after title moves -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addProductBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:text="See company orders"
        android:paddingVertical="12dp"
        android:textColor="@color/leaf_green"
        app:strokeColor="@color/leaf_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cProductsBtn"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>