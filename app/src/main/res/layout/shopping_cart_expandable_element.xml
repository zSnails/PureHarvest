<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shopping_cart_item_background"
    android:elevation="5dp"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    android:paddingVertical="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/product_image_small"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_placeholder_missing_image" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:importantForAccessibility="yes"
        android:text="@string/placeholder_item_title"
        android:textColor="@color/black"
        android:textSize="@dimen/default_title_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/extended_details_frame"
        app:layout_constraintStart_toEndOf="@id/product_image_small"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dropdown_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_arrow_drop_down_24" />

    <!-- NOTE: En cuanto a rendimiento un pequeÃ±o constraint layout no va a matar a los usuarios -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/extended_details_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_name">

        <ImageView
            android:id="@+id/product_image_big"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_placeholder_missing_image" />

        <TextView
            android:id="@+id/product_type_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:gravity="bottom"
            android:text="@string/placeholder_item_title"
            android:textColor="@color/black"
            android:textSize="@dimen/small_title_text_size"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/product_type_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/product_price_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_small_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="4dp"
            android:text="@string/cart_price_title"
            android:textColor="@color/black"
            android:textSize="@dimen/small_title_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/cart_item_amount"
            app:layout_constraintEnd_toStartOf="@id/product_price_detail"
            app:layout_constraintTop_toBottomOf="@id/product_type_detail" />

        <TextView
            android:id="@+id/product_price_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_small_vertical_margin"
            android:layout_marginBottom="4dp"
            android:text="@string/placeholder_item_price"
            android:textColor="@color/leaf_green"
            android:textSize="@dimen/small_title_text_size"
            app:layout_constraintBottom_toTopOf="@id/cart_item_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_type_detail" />

        <TextView
            android:id="@+id/cart_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_small_horizontal_margin"
            android:background="@drawable/shopping_cart_amount_background"
            android:paddingHorizontal="@dimen/shopping_cart_amount_horizontal_padding"
            android:paddingVertical="@dimen/shopping_cart_amount_vertical_padding"
            android:text="@string/placeholder_item_amount"
            android:textColor="@color/white"
            android:textSize="@dimen/small_title_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_price_detail" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_coupon_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/cart_item_amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_coupon_code"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:hint="@string/coupon_code_hint"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/leaf_green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/button_apply_coupon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_coupon_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:paddingVertical="0dp"
                    android:includeFontPadding="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_apply_coupon"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="@string/redeem_button"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/leaf_green"
                android:paddingHorizontal="16dp"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toTopOf="@id/layout_coupon_code"
                app:layout_constraintBottom_toBottomOf="@id/layout_coupon_code"
                app:layout_constraintStart_toEndOf="@id/layout_coupon_code"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>