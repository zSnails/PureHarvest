<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.companyContact.companyContactFragment">

    <!-- Back button removed -->

    <ImageView
        android:id="@+id/profileImagePlaceholder"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle_mask"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> <!-- Adjusted: Constrained to parent top -->

    <!-- Change Photo button removed -->
    <!-- Delete Photo button removed -->

    <TextView
        android:id="@+id/NameT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/leaf_green"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImagePlaceholder"
        tools:text="Company Name" /> <!-- Added tools:text for preview -->

    <TextView
        android:id="@+id/sloganT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/textGray"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameT"
        app:layout_constraintWidth_percent="0.8"
        tools:text="Professional Slogan Here" />

    <TextView
        android:id="@+id/contactT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Contact Information"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sloganT" />

    <TextView
        android:id="@+id/phoneLabelT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Phone:"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactT" />

    <TextView
        android:id="@+id/phoneT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/phoneLabelT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/phoneLabelT"
        app:layout_constraintTop_toTopOf="@+id/phoneLabelT"
        tools:text="8888 8888" />

    <TextView
        android:id="@+id/emailLabelT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email:"
        app:layout_constraintStart_toStartOf="@+id/phoneLabelT"
        app:layout_constraintTop_toBottomOf="@+id/phoneLabelT" />

    <TextView
        android:id="@+id/emailT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/emailLabelT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/emailLabelT"
        app:layout_constraintTop_toTopOf="@+id/emailLabelT"
        tools:text="company@example.com" />

    <TextView
        android:id="@+id/addressLabelT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Address:"
        app:layout_constraintStart_toStartOf="@+id/emailLabelT"
        app:layout_constraintTop_toBottomOf="@+id/emailLabelT" />

    <TextView
        android:id="@+id/adressT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/addressLabelT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addressLabelT"
        app:layout_constraintTop_toTopOf="@+id/addressLabelT"
        tools:text="Santa Clara, San Carlos" />

    <TextView
        android:id="@+id/mapLabelT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Map:"
        app:layout_constraintStart_toStartOf="@+id/addressLabelT"
        app:layout_constraintTop_toBottomOf="@+id/addressLabelT" />

    <!-- Replaced TextView with Button -->
    <Button
        android:id="@+id/mapAdressT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="40dp"
        android:text="See location in map"
        app:layout_constraintBottom_toBottomOf="@+id/mapLabelT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mapLabelT"
        app:layout_constraintTop_toTopOf="@+id/mapLabelT" />

    <!-- Edit Profile button removed -->

</androidx.constraintlayout.widget.ConstraintLayout>