<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewBuyerIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_id"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewBuyerId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textViewBuyerIdLabel"
            app:layout_constraintTop_toTopOf="@+id/textViewBuyerIdLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="CB001" />

        <TextView
            android:id="@+id/textViewBuyerNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/label_name"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBuyerIdLabel" />

        <TextView
            android:id="@+id/textViewBuyerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textViewBuyerNameLabel"
            app:layout_constraintTop_toTopOf="@+id/textViewBuyerNameLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Comprador Alfa" />

        <TextView
            android:id="@+id/textViewBuyerEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/label_email"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBuyerNameLabel" />

        <TextView
            android:id="@+id/textViewBuyerEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textViewBuyerEmailLabel"
            app:layout_constraintTop_toTopOf="@+id/textViewBuyerEmailLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="comprador@example.com" />

        <TextView
            android:id="@+id/textViewBuyerPhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/label_phone"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBuyerEmailLabel" />

        <TextView
            android:id="@+id/textViewBuyerPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textViewBuyerPhoneLabel"
            app:layout_constraintTop_toTopOf="@+id/textViewBuyerPhoneLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="+1234567890" />

        <TextView
            android:id="@+id/textViewItemsBoughtLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/label_items_bought"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBuyerPhoneLabel"/>

        <TextView
            android:id="@+id/textViewItemsBought"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textViewItemsBoughtLabel"
            app:layout_constraintTop_toTopOf="@+id/textViewItemsBoughtLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textViewItemsBoughtLabel"
            tools:text="15" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonContactBuyer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_contact"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewItemsBoughtLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>